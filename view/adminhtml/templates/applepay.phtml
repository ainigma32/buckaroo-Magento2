<!-- Set up a container element for the button -->
<div id="applepay-button-wrapper">
    <apple-pay-button lang="en-US" buttonstyle="<?php echo $block->getButtonStyle();?>" hidden="false"></apple-pay-button>
</div>
<script>
    function requireApplePay(callback){
        const e = document.createElement("script");
        e.src = `https://applepay.cdn-apple.com/jsapi/v1.1.0/apple-pay-button.js`;
        e.type = "text/javascript";
        e.addEventListener("load", callback);
        document.getElementsByTagName("head")[0].appendChild(e);
    }
    require(['jquery'], ($) => {
        const buttonElement = $('apple-pay-button');
        let buttonStyle = "<?php echo $block->getButtonStyle();?>";
        function renderButton(){
            buttonElement.attr('lang',document.firstElementChild.lang)
            buttonElement.attr('buttonStyle',buttonStyle)
            buttonElement.attr('type',"buy")
        }
        if(!customElements.get('apple-pay-button')){
            requireApplePay(renderButton)
        } else {
            renderButton()
        }
        $('#<?php echo $block->getButtonStyleElement() ?>').change(function () {
            if($(this).val()!==buttonStyle){
                buttonStyle = $(this).val()
                renderButton()
            }
        })
    })
</script>
<style>
    #applepay-button-wrapper > apple-pay-button {
        display: inline;
    }
</style>
