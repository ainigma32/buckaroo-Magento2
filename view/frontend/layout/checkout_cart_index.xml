<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Buckaroo_Magento2::css/ideal-fast-checkout.css" />
    </head>
    <body>

        <referenceContainer name="checkout.cart.shortcut.buttons">
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\PaypalExpress"
                   name="buckaroo.paypal.express.cart.button"
                   template="Buckaroo_Magento2::checkout/cart/paypal-express.phtml"
                   after="-"/>
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\Applepay" 
                   name="buckaroo_magento2.checkout.cart.applepay"
                   template="Buckaroo_Magento2::checkout/cart/applepay.phtml"
                   after="buckaroo.paypal.express.cart.button"/>
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\IdealFastCheckout" 
                   name="buckaroo_magento2.checkout.cart.ideal.fast.checkout"
                   template="Buckaroo_Magento2::checkout/cart/ideal-fast-checkout.phtml"
                   after="buckaroo_magento2.checkout.cart.applepay"/>
        </referenceContainer>

        <referenceBlock name="checkout.cart.order.actions">
            <block class="Buckaroo\Magento2\Block\Cart\BuckarooConfig" name="checkout.cart.order.actions.buckaroo-fee_options" template="cart/buckaroo_config.phtml" cacheable="false"/>
        </referenceBlock>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="before_grandtotal" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="buckaroo-fee-order-level" xsi:type="array">
                                            <item name="component"  xsi:type="string">Buckaroo_Magento2/js/view/checkout/cart/totals/buckaroo_fee</item>
                                            <item name="config" xsi:type="array">
                                                <item name="title" xsi:type="string">Buckaroo Fee for Order</item>
                                                <item name="level" xsi:type="string">order</item>
                                            </item>
                                        </item>
                                        <item name="paid_gift" xsi:type="array">
                                            <item name="component" xsi:type="string">Buckaroo_Magento2/js/view/summary/totals</item>
                                            <item name="config" xsi:type="array">
                                                <item name="template" xsi:type="string">Buckaroo_Magento2/cart/totals/paid_gift</item>
                                            </item>
                                        </item>
                                   </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
